{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "github>dockhippie/.github//renovate/preset"
    ],
    "packageRules": [
        {
            "description": "Update golang docker images",
            "matchDatasources": [
                "docker"
            ],
            "matchUpdateTypes": [
                "major",
                "minor"
            ],
            "enabled": true,
            "automerge": true
        },
        {
            "description": "Update tags without merge",
            "matchDatasources": [
                "github-releases"
            ],
            "matchUpdateTypes": [
                "major",
                "minor"
            ],
            "enabled": false,
            "automerge": false,
            "matchPackageNames": [
                "caddyserver/caddy"
            ]
        },
        {
            "description": "Update tags without merge",
            "matchDatasources": [
                "github-releases"
            ],
            "matchUpdateTypes": [
                "patch"
            ],
            "enabled": true,
            "automerge": true,
            "matchPackageNames": [
                "caddyserver/caddy"
            ]
        },
        {
            "description": "Disable incompatible caddy-jwt upgrades",
            "matchPackageNames": [
                "ggicci/caddy-jwt"
            ],
            "matchFileNames": [
                "v2.5/Dockerfile*",
                "v2.6/Dockerfile*"
            ],
            "matchUpdateTypes": [
                "major",
                "minor",
                "patch"
            ],
            "enabled": false
        },
        {
            "description": "Disable incompatible golang upgrades",
            "matchPackageNames": [
                "ghcr.io/dockhippie/golang"
            ],
            "matchFileNames": [
                "v2.5/Dockerfile*",
                "v2.6/Dockerfile*"
            ],
            "matchUpdateTypes": [
                "major",
                "minor",
                "patch"
            ],
            "enabled": false
        }
    ]
}
