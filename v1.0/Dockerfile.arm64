FROM webhippie/golang:1.15-arm64@sha256:92250ea79dd5e51360c9a56396f7c8a24edbfd0989c5b6896f6883617873a43f as build

COPY ./build /

RUN cd /srv/app/caddy && \
  go mod init caddy && \
  go get github.com/caddyserver/caddy@v1.0.5 && \
  go get ./... && \
  go install

FROM webhippie/alpine:latest-arm64@sha256:0e8f1ef77ac6d03dd3ec413ef5072157a719b7f0bdb01c8c5cf3f138198422dd

EXPOSE 8080

WORKDIR /srv/www
CMD ["/usr/bin/container"]

RUN apk update && \
  apk upgrade && \
  groupadd -g 1000 caddy && \
  useradd -u 1000 -d /srv/www -g caddy -s /bin/bash -M caddy && \
  apk add mailcap && \
  rm -rf /var/cache/apk/*

COPY --from=build /srv/app/bin/caddy /usr/sbin/caddy
COPY ./overlay /
