FROM webhippie/golang:1.15-arm64@sha256:d7564d52ba6a91133469f49cec5e38fc1ac9ef09effa222061ae5d8f707b22a4 as build

COPY ./build /

RUN cd /srv/app/caddy && \
  go mod init caddy && \
  go get github.com/caddyserver/caddy@v1.0.5 && \
  go get ./... && \
  go install

FROM webhippie/alpine:latest-arm64@sha256:5e85940ffcfa2d0b7e5484c06b1f91941ce4ecaffa69b625cb1b704af6e4eec8

EXPOSE 8080

WORKDIR /srv/www
CMD ["/usr/bin/container"]

RUN apk update && \
  apk upgrade && \
  groupadd -g 1000 caddy && \
  useradd -u 1000 -d /srv/www -g caddy -s /bin/bash -M caddy && \
  apk add mailcap && \
  rm -rf /var/cache/apk/*

COPY --from=build /srv/app/bin/caddy /usr/sbin/caddy
COPY ./overlay /
