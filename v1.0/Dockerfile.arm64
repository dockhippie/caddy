FROM webhippie/golang:1.15-arm64@sha256:2d22a635424efd2dc408e5ff77ae43e49e69ea5917abaa9b3ca8dbcfb7dcd6fc as build

COPY ./build /

RUN cd /srv/app/caddy && \
  go mod init caddy && \
  go get github.com/caddyserver/caddy@v1.0.5 && \
  go get ./... && \
  go install

FROM webhippie/alpine:latest-arm64@sha256:e931767e6f9c9b53f4f70b5373ed9c5616e639d0d7ddde1d351e750dc2a03ed2

EXPOSE 8080

WORKDIR /srv/www
CMD ["/usr/bin/container"]

RUN apk update && \
  apk upgrade && \
  groupadd -g 1000 caddy && \
  useradd -u 1000 -d /srv/www -g caddy -s /bin/bash -M caddy && \
  apk add mailcap && \
  rm -rf /var/cache/apk/*

COPY --from=build /srv/app/bin/caddy /usr/sbin/caddy
COPY ./overlay /
